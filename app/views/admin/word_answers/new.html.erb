<div class="main users-new">
  <div class="container">
    <div class="form-heading">Create new options</div>
    <div class="form users-form">
      

      <div class="form-body">
        <%= form_tag("/admin/categories/#{@word.category.id}/words/#{@word.id}/word_answers") do %>
            <div class="form-group">
            <%= label_tag "Option 1" %>
            <%= text_field_tag "[word_answers][0][content]"%>
            <%= check_box_tag "[word_answers][0][correct]" %>
            <%= label_tag "[word_answers][0][correct]", 'Correct' %>
            </div>
            <div class="form-group">
            <%= label_tag "[word_answers][1][content]" %>
            <%= text_field_tag "[word_answers][1][content]"%>
            <%= check_box_tag "[word_answers][1][correct]" %>
            <%= label_tag "[word_answers][1][correct]", 'Correct' %>
            </div>
            <div class="form-group">
            <%= label_tag "[word_answers][2][content]" %>
            <%= text_field_tag "[word_answers][2][content]"%>
            <%= check_box_tag "[word_answers][2][correct]" %>
            <%= label_tag "[word_answers][2][correct]", 'Correct' %>
            </div>
            <div class="form-group">
            <%= label_tag "[word_answers][3][content]" %>
            <%= text_field_tag "[word_answers][3][content]"%>
            <%= check_box_tag "[word_answers][3][correct]" %>
            <%= label_tag "[word_answers][3][correct]", 'Correct' %>
            </div>
                <%= submit_tag "Create"%>
        <% end %>

        
        
      </div>
    <div>
  </div>
</div>