<div class="main top-main">
	<div class="top-message">
		<div class="row">
			<div class="col-md-4">
				<section class="user_info">
					<%= render 'shared/user_info' %>
				</section>
				<section>
					<%= render 'shared/stats' %>
				</section>
				<section>
					<% if @user.id == current_user.id %>
      					<%= link_to("Edit", "/users/#{@user.id}/edit") %>
      				<% end %>
				</section>
				<% unless current_user?(@user) %>
					<section class="follow-follower-btn">
						<%= render 'shared/follow_form' %>
					</section>
				<% end %>			
			</div>
			<div class="col-md-8">
					<h3>Here is for Activity</h3>
			</div>
		</div>
	</div>
</div>