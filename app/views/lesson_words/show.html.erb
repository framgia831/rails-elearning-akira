<div class="main users-index">
	<div class="container">
		<h1 class="users-heading">Category: <%= @lesson.category.title %></h1>
      <div class="users-index-item">
  		  <div class="row">
          <div class="col-md-4">
            <h3><%= @lesson_word.word.content %></h3>
          </div>
          <div class="col-md-8">
            <% @lesson_word.word.word_answers.each do |word| %>
                <%= button_to word.content, lesson_lesson_word_path(@lesson, @lesson_word), params: {answer_id: word.id} , method: :patch %><br><br>
            <% end %>
            
          </div>
        </div>
      </div>
		</div>
	</div>
</div>